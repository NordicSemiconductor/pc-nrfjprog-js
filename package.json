    "bindings": "^1.2.1",
    "cmake-js": "1.1.0",
    "nan": "2.3.3"
  },
  "devDependencies": {
    "gh-pages": "^1.0.0",
    "jest": "^19.0.2",
    "jest-bamboo-formatter": "1.0.1",
    "jsdoc": "^3.5.4",
    "minami": "^1.2.3",
    "tar": "2.2.1"
  }
